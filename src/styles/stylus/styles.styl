      stylus -w styles.styl -o ../styles.styl.css
*/

@require "animations"
@require "library"

html
  font-family: sans-serif
  user-select: none
  cursor: default

html, #layout, header, h1, body
  margin: 0px
  padding: 0px

html
  background: url("https://previews.123rf.com/images/hakkiarslan/hakkiarslan1601/hakkiarslan160100040/51690968-Colorful-wall-painting-art-inspirational-background-image--Stock-Photo.jpg") no-repeat center center fixed
  background-size: cover

html, body, #root, #layout
  height: 100%
  width: 100%
  margin: 0

body
  display: flex
  justify-content: center
  align-items: center

#root
  opacity: .9
  overflow: hidden
  @media $tabletUp
    margin-top: 4em

#layout
  display: grid
  text-align: center
  max-width: 50em
  margin: 0 auto 0 auto
  @media $mobile
    grid-template-areas: "header" "mainstuff" "footer"
    grid-template-columns: 1fr
    grid-template-rows: auto
  @media $tabletUp
    grid-template-areas: "header" "mainstuff" "footer" "space"
    grid-template-columns: 1fr
    grid-template-rows: 6em auto 4em auto

header
  grid-area: header
  padding: 1em 0 0 0
  color: white
  background: #A1552E
  display: flex
  align-items: center
  justify-content: center


h1
  font-weight: normal
  font-family: cursive

sup
  font-size : .7em
  font-style: italic

#maincontent
  grid-area: mainstuff
  display: grid
  text-align: center
  color: black
  background-color: #93BADC
  @media $mobile
    grid-template-areas: "points points" "quotebox quotebox" "input input" "newbutton cheatbutton"
    grid-template-columns: 1fr 1fr
    grid-gap: 0 1em
    padding: 1em 6%
  @media $tabletUp
    grid-template-areas: "points points points" "quotebox quotebox quotebox" "newbutton input cheatbutton"
    grid-template-columns: 1fr 2fr 1fr
    grid-gap: 0 2.5em
    padding: 1em 15%

#points
  grid-area: points
  align-self: end
  color: rgb(200,0,0)
  margin: 0 0 1em 0

.magicword
  padding: 0 .1em
  font-size: 1.2em
  transition: .2s

.magicword.highlighted.synonym:hover
  background-color: rgba(200,0,0,.7)
  color: white

.magicword.highlighted.rhyme:hover
  background-color: rgba(0,100,250,.7)
  color: white

.magicword.highlighted
  cursor: pointer

.magicword.highlighted.synonym
  color: rgba(200,0,0,.7)

.magicword.highlighted.rhyme
  color: rgba(0,100,250,.7)

blockquote
  padding: 1.8em
  grid-area: quotebox
  align-self: center
  text-align: left
  line-height: 2em
  background: white
  border-left: 10px solid rgba(150,0,0,.7)
  quotes: "\201C""\201D""\2018""\2019"
  @media $mobile
    margin: 0 0 1em 0
  @media $tabletUp
    margin: 0 0 1.5em 0

blockquote:before
  color: #93BADC
  font-size: 4em
  line-height: .1em
  margin-right: 0.25em
  vertical-align: -0.4em

blockquote::before
  content: open-quote

blockquote small
  font-style: italic
  color: #93BADC

#author
  display: inline-block

blockquote span
  display: inline-block

h3
  padding: 1em
  font-weight: lighter
  max-width: 100%


h3::selection
  background-color: rgba(150,0,0,.7)
  transition: .2s


input
  color: black
  box-shadow: 0 0 4px black
  text-align: center
  border: 4px solid rgba(200,0,0,.7)
  background-color: white
  height: 3em
  transition: .2s


button
  color: white
  height: 3em
  width: 100%
  border: none
  background: rgba(200,0,0,.7)
  box-shadow: 0 0 4px black
  transition: .2s


button:hover
  background-color: rgba(200,0,0,.7)
  box-shadow: 0 0 8px 0 black
  cursor: pointer


button:active
  background-color: rgba(255,0,0,.7)


#newbutton
  grid-area: newbutton
  justify-self: left


#cheatbutton
  grid-area: cheatbutton
  justify-self: right


#infield
  grid-area: input


*:focus
    outline: none


.crosshair
  cursor: crosshair !important


footer
  display: flex
  justify-content: center
  align-items: center
  grid-area: footer
  color: white
  background: #A1552E


footer p
  font-size: .8em
  font-family: cursive
  opacity: .5
